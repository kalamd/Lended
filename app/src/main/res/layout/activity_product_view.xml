<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product_view">

    <ScrollView
        android:layout_width="414dp"
        android:layout_height="840dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="463dp"
                android:layout_height="450dp"
                app:srcCompat="@drawable/promdress" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="358dp"
                android:layout_height="51dp"
                android:fontFamily="@font/work_sans_bold"
                android:text="Appliques Cocktail Dress"
                android:textSize="28" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted 5 hours ago" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:text="MAKE OFFER"
                    android:textAlignment="viewStart" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textAlignment="viewStart" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="138dp"
                android:layout_height="41dp"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Location"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Condition" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:text="New" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:text="Like New" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Used" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Damaged" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Brand" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Description" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Available Dates" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="404dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/work_sans_semibold"
                android:text="Rental Duration" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="34dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BORROW" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>